<UserControl x:Class="EasyPackWebProjectTool.LanguageUiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyPackWebProjectTool"
             mc:Ignorable="d" 
             
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{StaticResource Zcool.FontFamily}">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="20" Margin="5,5,10,5"
                    HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Name="EnglishButton" Content="English" Background="LightGray" BorderBrush="Transparent"
                    Click="EnglishButton_OnClick"></Button>
            <Rectangle Width="1" Margin="10,0,10,0" Fill="Gray"></Rectangle>
            <Button Name="ChineseButton" Content="中文" Background="Transparent" BorderBrush="Transparent"
                    Click="ChineseButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</UserControl>
